# Production Environment Variables for Digital Ocean Droplet
# Copy this file to .env and update with your actual values

# Docker Hub username (required for pulling images)
DOCKER_USERNAME=your-dockerhub-username

# Flask Secret Key (generate a secure random key for production!)
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-to-a-secure-random-key-in-production

# Flask Environment
FLASK_ENV=production

# MongoDB Connection URI
MONGO_URI=mongodb://mongodb:27017/proj4
